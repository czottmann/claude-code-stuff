#!/usr/bin/env fish
#MISE description="Makes the Claude user folder's `skills/` folder a symlink of `./skills/`"

set SOURCE $MISE_PROJECT_ROOT/skills
set TARGET ~/.claude/skills

gum confirm "Symlinking $SOURCE to $TARGET" --default=No || exit 1

if test -e $TARGET
    gum confirm "$TARGET exists, overwrite?" --default=No || exit 1
    rm -rf $TARGET
end

ln -s $SOURCE $TARGET
echo "âœ… Done!"
