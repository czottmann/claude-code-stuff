#!/usr/bin/env fish
#MISE description="Compile `./build/AGENTS.md` from `./rules/*.md` files"

set OUTPUT_FOLDER $MISE_PROJECT_ROOT/.build
set OUTPUT_FILE $OUTPUT_FOLDER/AGENTS.md

mkdir -p $OUTPUT_FOLDER
rm -f $OUTPUT_FILE

for DOC in $MISE_PROJECT_ROOT/rules/*.md
    printf '<!-- %s -->\n\n' $DOC >>$OUTPUT_FILE
    cat $DOC >>$OUTPUT_FILE
end

echo "âœ… Built $OUTPUT_FILE"
